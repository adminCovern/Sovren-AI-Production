{
  "environment": "staging",
  "port": 3000,
  "host": "0.0.0.0",
  "baseUrl": "https://staging-api.sovren.ai",
  
  "database": {
    "host": "staging-db.sovren.ai",
    "port": 5432,
    "database": "sovren_ai_staging",
    "username": "sovren_staging",
    "password": "STAGING_DB_PASSWORD",
    "ssl": true,
    "maxConnections": 50,
    "connectionTimeout": 30000,
    "queryTimeout": 60000,
    "poolMin": 5,
    "poolMax": 25,
    "idleTimeoutMillis": 30000
  },
  
  "redis": {
    "url": "redis://staging-redis.sovren.ai:6379",
    "host": "staging-redis.sovren.ai",
    "port": 6379,
    "db": 0,
    "maxRetries": 3,
    "retryDelay": 1000,
    "connectTimeout": 10000,
    "lazyConnect": true,
    "keepAlive": 30000,
    "family": 4
  },
  
  "security": {
    "jwt": {
      "secret": "STAGING_JWT_SECRET_32_CHARACTERS_MIN"
    },
    "rateLimiting": {
      "windowMs": 900000,
      "max": 2000
    },
    "cors": {
      "origin": ["https://staging.sovren.ai", "https://staging-app.sovren.ai"]
    },
    "csp": {
      "enabled": true,
      "reportOnly": false
    }
  },
  
  "tts": {
    "modelsPath": "/opt/sovren/models/styletts2",
    "outputPath": "/var/www/sovren/public/audio/generated",
    "pythonPath": "/usr/bin/python3",
    "styleTTS2Path": "/opt/styletts2",
    "maxConcurrentSynthesis": 5,
    "cacheMaxSize": 2000
  },
  
  "shadowBoard": {
    "voiceModelsPath": "/opt/sovren/models/executives",
    "personalityConfigPath": "/opt/sovren/config/personalities"
  },
  
  "email": {
    "provider": "smtp",
    "smtp": {
      "host": "smtp.staging.sovren.ai",
      "port": 587,
      "secure": false,
      "auth": {
        "user": "STAGING_SMTP_USER",
        "pass": "STAGING_SMTP_PASSWORD"
      }
    },
    "from": "staging@sovren.ai"
  },
  
  "storage": {
    "provider": "s3",
    "s3": {
      "bucket": "sovren-ai-staging-storage",
      "region": "us-east-1",
      "accessKeyId": "STAGING_AWS_ACCESS_KEY_ID",
      "secretAccessKey": "STAGING_AWS_SECRET_ACCESS_KEY",
      "publicUrl": "https://staging-cdn.sovren.ai"
    }
  },
  
  "monitoring": {
    "enabled": true,
    "metricsPort": 9090,
    "alerting": {
      "enabled": true,
      "email": "staging-alerts@sovren.ai",
      "thresholds": {
        "cpuUsage": 75,
        "memoryUsage": 85,
        "responseTime": 1000,
        "errorRate": 5
      }
    },
    "logging": {
      "level": "debug",
      "format": "json",
      "file": {
        "enabled": true,
        "path": "/var/log/sovren",
        "maxSize": "50m",
        "maxFiles": 7
      },
      "console": {
        "enabled": true,
        "colorize": false
      }
    }
  },
  
  "performance": {
    "optimization": {
      "enabled": true,
      "cacheMaxSize": 5000,
      "maxConcurrentRequests": 500,
      "requestTimeout": 30000,
      "keepAliveTimeout": 5000
    },
    "clustering": {
      "enabled": true,
      "workers": 2
    },
    "compression": {
      "enabled": true,
      "level": 6,
      "threshold": 1024
    },
    "staticFiles": {
      "maxAge": 3600,
      "etag": true,
      "lastModified": true
    }
  },
  
  "limits": {
    "maxConcurrentUsers": 5000,
    "maxRequestsPerMinute": 50000,
    "maxFileSize": 26214400,
    "maxAudioDuration": 300,
    "maxExecutivesPerUser": 8,
    "maxIntegrationsPerUser": 15,
    "maxSessionDuration": 86400000,
    "maxUploadSize": 52428800
  },
  
  "features": {
    "quantumDecisionMaking": true,
    "multiTenant": true,
    "performanceOptimization": true,
    "advancedSecurity": true
  }
}
