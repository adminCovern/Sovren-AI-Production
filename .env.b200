# SOVREN AI B200 Server Production Environment
# Configure these values for your B200 infrastructure

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
APP_NAME=sovren-ai-shadowboard
APP_VERSION=1.0.0

# =============================================================================
# B200 GPU CONFIGURATION
# =============================================================================
# B200 Blackwell GPU Settings
B200_GPU_COUNT=8
TOTAL_VRAM_GB=1464
CUDA_VISIBLE_DEVICES=0,1,2,3,4,5,6,7
NVIDIA_VISIBLE_DEVICES=all

# B200 Resource Manager
B200_MCP_SERVER_URL=http://localhost:8000
B200_RESOURCE_MONITORING=true
B200_AUTO_SCALING=true

# NVLink Fabric Configuration
NVLINK_FABRIC_ENABLED=true
NVLINK_BANDWIDTH_TOTAL=43200
NVLINK_TOPOLOGY=full_mesh

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (Configure for your B200 server)
DATABASE_URL=postgresql://sovren_user:CHANGE_ME_SECURE_PASSWORD@localhost:5432/sovren_ai_production
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sovren_ai_production
DATABASE_USER=sovren_user
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=50
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache and Session Store (Configure for your B200 server)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Authentication
JWT_SECRET=CHANGE_ME_SUPER_SECURE_JWT_SECRET_KEY_64_CHARACTERS_MINIMUM_FOR_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CSRF Protection
CSRF_SECRET=CHANGE_ME_SUPER_SECURE_CSRF_SECRET_KEY_64_CHARACTERS_MINIMUM_FOR_PRODUCTION

# Encryption Keys
ENCRYPTION_KEY=CHANGE_ME_32_CHARACTER_ENCRYPTION_KEY_FOR_PRODUCTION_USE_ONLY

# =============================================================================
# SHADOW BOARD CONFIGURATION
# =============================================================================
# Shadow Board Executives
SHADOW_BOARD_ENABLED=true
MAX_EXECUTIVES=8
EXECUTIVE_VOICE_SYNTHESIS=true
EXECUTIVE_B200_ACCELERATION=true

# Executive Personalities
SOVREN_AI_PERSONALITY=omniscient_orchestrator
CFO_PERSONALITY=analytical_optimizer
CMO_PERSONALITY=growth_strategist
CTO_PERSONALITY=innovation_architect
LEGAL_PERSONALITY=risk_mitigator

# =============================================================================
# VOICE SYNTHESIS CONFIGURATION
# =============================================================================
# StyleTTS2 Configuration
VOICE_SYNTHESIS_ENABLED=true
VOICE_SYNTHESIS_B200_ACCELERATION=true
VOICE_SYNTHESIS_MAX_CONCURRENT=8
VOICE_SYNTHESIS_QUALITY=high

# Voice Model Paths (Configure for your B200 server)
VOICE_MODEL_PATH=/opt/sovren-ai/models/voice
VOICE_CACHE_PATH=/opt/sovren-ai/cache/voice

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# VLLM Configuration for B200
VLLM_ENABLED=true
VLLM_GPU_MEMORY_UTILIZATION=0.9
VLLM_MAX_MODEL_LEN=32768
VLLM_TENSOR_PARALLEL_SIZE=8
VLLM_PIPELINE_PARALLEL_SIZE=1

# Model Configurations
SOVREN_MODEL_PATH=/opt/sovren-ai/models/sovren-ai-executive
CFO_MODEL_PATH=/opt/sovren-ai/models/cfo-executive
CMO_MODEL_PATH=/opt/sovren-ai/models/cmo-executive
CTO_MODEL_PATH=/opt/sovren-ai/models/cto-executive
LEGAL_MODEL_PATH=/opt/sovren-ai/models/legal-executive

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Application Monitoring
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/sovren-ai/application.log

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_COLLECTION=true
METRICS_ENDPOINT=/metrics

# B200 Resource Monitoring
B200_MONITORING_INTERVAL=5000
B200_METRICS_RETENTION=7d
B200_ALERT_THRESHOLDS=memory:80,temperature:85,power:90

# =============================================================================
# NETWORKING CONFIGURATION
# =============================================================================
# Server Configuration
HOSTNAME=0.0.0.0
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration (Optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=noreply@your-domain.com

# Webhook Configuration (Optional)
WEBHOOK_SECRET=CHANGE_ME_WEBHOOK_SECRET
WEBHOOK_TIMEOUT=30000

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/sovren-ai/backups

# =============================================================================
# DEVELOPMENT AND DEBUG (Set to false in production)
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Super Admin User (Brian Geary)
ADMIN_EMAIL=admin@sovrenai.app
ADMIN_NAME=Brian Geary
ADMIN_PASSWORD=CHANGE_ME_SUPER_SECURE_ADMIN_PASSWORD
ADMIN_ROLE=founder

# Default Demo Users
DEMO_USERS_ENABLED=true
DEMO_SMB_EMAIL=demo@company.com
DEMO_SMB_PASSWORD=CHANGE_ME_DEMO_PASSWORD
DEMO_ENTERPRISE_EMAIL=admin@enterprise.com
DEMO_ENTERPRISE_PASSWORD=CHANGE_ME_ENTERPRISE_PASSWORD
