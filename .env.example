# SOVREN AI - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment (development, staging, production, test)
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000

# Configuration Path (optional, defaults to ./config)
CONFIG_PATH=./config

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (overrides individual database settings)
DATABASE_URL=postgresql://sovren_dev:dev_password@localhost:5432/sovren_ai_dev

# Individual Database Settings (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sovren_ai_dev
DB_USER=sovren_dev
DB_PASSWORD=dev_password
DB_SSL=false
DB_MAX_CONNECTIONS=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL (overrides individual Redis settings)
REDIS_URL=redis://localhost:6379

# Individual Redis Settings (used if REDIS_URL is not set)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting Redis (can be same as main Redis)
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration (CRITICAL: Change in production)
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=sovren-ai
JWT_AUDIENCE=sovren-ai-users

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# =============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# =============================================================================

# TTS Models and Paths
TTS_MODELS_PATH=./models/styletts2
TTS_OUTPUT_PATH=./public/audio/generated
PYTHON_PATH=/usr/bin/python3
STYLETTS2_PATH=./styletts2

# TTS Performance Settings
TTS_MAX_CONCURRENT=5
TTS_MAX_TEXT_LENGTH=5000
TTS_CACHE_ENABLED=true
TTS_CACHE_MAX_SIZE=1000

# =============================================================================
# SHADOW BOARD CONFIGURATION
# =============================================================================

# Shadow Board Paths
SHADOW_BOARD_VOICE_MODELS_PATH=./models/executives
SHADOW_BOARD_PERSONALITY_CONFIG_PATH=./config/personalities

# Shadow Board Settings
SHADOW_BOARD_MAX_EXECUTIVES=8
SHADOW_BOARD_DEFAULT_TIER=SMB

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Provider (smtp, sendgrid, mailgun, ses)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user
SMTP_PASSWORD=password

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# AWS SES Configuration
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key

# Email Settings
EMAIL_FROM=noreply@sovrenai.app
EMAIL_REPLY_TO=support@sovrenai.app

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage Provider (local, s3, gcs, azure)
STORAGE_PROVIDER=local

# Local Storage Configuration
STORAGE_LOCAL_BASE_PATH=./storage
STORAGE_LOCAL_PUBLIC_URL=/storage

# AWS S3 Configuration
AWS_S3_BUCKET=sovren-ai-storage
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your-aws-access-key
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_PUBLIC_URL=https://cdn.sovrenai.app

# Google Cloud Storage Configuration
GCS_BUCKET=sovren-ai-storage
GCS_PROJECT_ID=your-gcs-project-id
GCS_KEY_FILENAME=./gcs-key.json
GCS_PUBLIC_URL=https://storage.googleapis.com/sovren-ai-storage

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=sovrenaistorage
AZURE_STORAGE_ACCOUNT_KEY=your-azure-storage-key
AZURE_STORAGE_CONTAINER_NAME=sovren-ai-storage
AZURE_STORAGE_PUBLIC_URL=https://sovrenaistorage.blob.core.windows.net

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Alerting Configuration
ALERTING_ENABLED=false
ALERTING_EMAIL=admin@sovren.ai
ALERTING_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Alert Thresholds
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_RESPONSE_TIME_THRESHOLD=1000
ALERT_ERROR_RATE_THRESHOLD=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance Optimization
PERFORMANCE_OPTIMIZATION_ENABLED=true
PERFORMANCE_CACHE_MAX_SIZE=1000
PERFORMANCE_MAX_CONCURRENT_REQUESTS=100
PERFORMANCE_REQUEST_TIMEOUT=30000
PERFORMANCE_KEEP_ALIVE_TIMEOUT=5000

# Clustering Configuration
CLUSTERING_ENABLED=false
CLUSTERING_WORKERS=auto

# Compression Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Static Files Configuration
STATIC_FILES_MAX_AGE=31536000
STATIC_FILES_ETAG=true
STATIC_FILES_LAST_MODIFIED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
FEATURE_VOICE_SYNTHESIS=true
FEATURE_SHADOW_BOARD=true
FEATURE_CRM_INTEGRATION=true
FEATURE_EMAIL_ORCHESTRATION=true
FEATURE_REAL_TIME_ANALYSIS=true

# Advanced Features
FEATURE_QUANTUM_DECISION_MAKING=false
FEATURE_MEMORY_PERSISTENCE=true
FEATURE_LEARNING_ADAPTATION=true
FEATURE_PERFORMANCE_OPTIMIZATION=true
FEATURE_ADVANCED_SECURITY=true

# Enterprise Features
FEATURE_MULTI_TENANT=false
FEATURE_API_VERSIONING=true

# =============================================================================
# SYSTEM LIMITS
# =============================================================================

# User and Request Limits
MAX_CONCURRENT_USERS=1000
MAX_REQUESTS_PER_MINUTE=10000
MAX_FILE_SIZE=10485760
MAX_AUDIO_DURATION=300
MAX_EXECUTIVES_PER_USER=8
MAX_INTEGRATIONS_PER_USER=10
MAX_SESSION_DURATION=86400000
MAX_UPLOAD_SIZE=52428800

# =============================================================================
# SKYETEL PHONE SERVICE CONFIGURATION
# =============================================================================

# Skyetel API Configuration
SKYETEL_API_KEY=your-skyetel-api-key
SKYETEL_API_SECRET=your-skyetel-api-secret
SKYETEL_API_URL=https://api.skyetel.com/v1

# SIP Configuration
SIP_DOMAIN=sip.sovren.ai
SIP_USERNAME=sovren_ai
SIP_PASSWORD=your-sip-password
SIP_SERVER_URL=wss://sip.sovren.ai

# FreeSWITCH Configuration
FREESWITCH_HOST=localhost
FREESWITCH_PORT=5060
FREESWITCH_ESL_PORT=8021
FREESWITCH_ESL_PASSWORD=your-esl-password

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# CRM Integration Keys
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key
PIPEDRIVE_API_TOKEN=your-pipedrive-api-token

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Development Tools (only used in development)
DEV_ENABLE_DEBUG=true
DEV_ENABLE_PROFILING=false
DEV_MOCK_EXTERNAL_SERVICES=true
DEV_SEED_DATABASE=true

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================

# Production Security Settings (uncomment for production)
# FORCE_HTTPS=true
# TRUST_PROXY=true
# SECURE_COOKIES=true
# CSRF_PROTECTION=true

# SSL/TLS Configuration
# SSL_CERT_PATH=/etc/ssl/certs/sovren.crt
# SSL_KEY_PATH=/etc/ssl/private/sovren.key

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=sovren-ai-backups
# BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
